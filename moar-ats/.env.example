# Database Configuration
# PostgreSQL connection string for Prisma
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/moar_ats"

# NextAuth.js Configuration
# Base URL of your application (e.g., http://localhost:3000 for development)
NEXTAUTH_URL="http://localhost:3000"
# Secret key for signing JWT tokens (generate a random string)
# You can generate one with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# Redis Configuration (Optional - for Story 1.1, required for background jobs in Epic 11)
# Redis connection string for BullMQ job queue
# Format: redis://host:port or redis://:password@host:port
REDIS_URL="redis://localhost:6379"

# AWS S3 Storage Configuration (Optional - for Story 1.1, required for file storage in Epic 11)
# AWS access key ID for S3 storage
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
# AWS secret access key for S3 storage
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
# S3 bucket name for storing files (resumes, offer letters, etc.)
AWS_S3_BUCKET="moar-ats-storage"
# AWS region (e.g., us-east-1, ap-south-1)
AWS_REGION="us-east-1"

# Email Service Configuration (Optional - for Story 1.1, required for email in Epic 11)
# Resend API key for email delivery
RESEND_API_KEY="your-resend-api-key"

# AI Services Configuration (Optional - for Story 1.1, required for AI features in Epic 5)
# OpenAI API key for AI services (resume parsing, scoring)
OPENAI_API_KEY="your-openai-api-key"
# OR use Anthropic instead
# ANTHROPIC_API_KEY="your-anthropic-api-key"
